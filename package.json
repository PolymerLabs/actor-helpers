{
  "name": "westend-helpers",
  "version": "0.0.1",
  "description": "",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"{demo/**/*.js,src/**/*.ts,*.{js,json,md}}\"",
    "format-check": "test $(prettier --l \"{demo/**/*.js,src/**/*.ts,*.{js,json,md}}\" | wc -l) -eq 0",
    "clean": "touch lib && rm -rf lib && mkdir lib",
    "test": "npm run clean && npm run build && karma start"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format-check"
    }
  },
  "author": "",
  "license": "BSD-3-Clause",
  "dependencies": {
    "typescript": "^3.0.3"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/mocha": "^5.2.5",
    "chai": "^4.1.2",
    "husky": "^1.0.0-rc.14",
    "karma": "^3.0.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "mocha": "^5.2.0",
    "prettier": "^1.14.3"
  }
}
