{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,

    "lib": ["dom", "webworker", "esnext"],
    "outDir": "./lib",
    "baseUrl": "./",
    "skipLibCheck": true,

    "declaration": true,
    "sourceMap": true
  }
}
